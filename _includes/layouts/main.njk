<!-- Enforce UTF-8 encoding -->
<!DOCTYPE html>
<html lang="{{ metadata.language }}">
	<head>
	  <meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="geo.region" content="CA-ON">
		<meta name="description" content="{{ description or metadata.description }}">
		<meta name="fediverse:creator" content="@Ryan@mstdn.ca" />
		<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate, max-age=180" />
		<meta http-equiv="Pragma" content="no-cache" />
		<meta http-equiv="X-Content-Type-Options" content="nosniff" />
		<title>{{ title }} | {{ metadata.title }}</title>
  		<link rel="icon" href="/img/favicon.ico" type="image/x-icon">

		{#- Atom and JSON feeds #}
		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
		<link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}">

		{#- Add the contents of each css file to the bundle #}
		{%- css %}{% include "11ty-theme/css/base.css" %}{% endcss %}
		{%- css %}{% include "11ty-theme/css/header.css" %}{% endcss %}
		{%- css %}{% include "11ty-theme/css/pagefind.css" %}{% endcss %}
		{%- css %}{% include "11ty-theme/css/main.css" %}{% endcss %}
		{%- css %}{% include "11ty-theme/css/footer.css" %}{% endcss %}
		<link rel="stylesheet" href="{% getBundleFileUrl "css" %}">

		{#- Add the Atkinson Hyperlegible font from Google Fonts #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

		{#- Add Font Awesome for icons #}
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css?v=1">
	</head>

	<body>
		<a href="#main" class="visually-hidden">Skip to main content</a>
		<div class="wrapper">
			<header>
				<nav class="container header-nav" aria-labelledby="landing-page-header">
					<h2 class="visually-hidden" id="landing-page-header">External Navigation Links</h2>
					<a href="https://ryanrobinson.ca" class="with-icon home-page">Ryan's Home Page</a>
				</nav>
				<div class="container title-search">
					<p><a href="/" class="with-icon {{ metadata.link_icon }}">{{ metadata.title }}</a></p>
					<div id="search" class="search">
						<script src="/pagefind/pagefind-ui.js" onload="new PagefindUI({ element: '#search', showImages: false, pageSize: 10 });"></script>
					</div>
				</div>
			</header>
			<main id="main" class="main-sidebar">
				<div class="main-content">
					<h1>{{ title }}</h1>
					{{ content | safe }}
				</div>
				<div class="sidebar">
					{% if show_sidebar %}
						{% set sidebarblocks = collections.sidebar %}
						{% include "sidebars.njk" %}
					{% endif %}
					{% include "serieslist.njk" %}
					{% include "tagslist.njk" %}
				</div>
			</main>
			<footer class="container" aria-label="Site Footer">
					{% include "sociallinks.njk" %}
					<p>&copy; 2025 Ryan Robinson. Powered by <a href="https://www.11ty.dev/">Eleventy</a> on <a href="https://pages.github.com/">GitHub Pages</a>. The site's font is <a href="https://brailleinstitute.org/freefont">Atkinson Hyperlegible from the Braille Institute</a>.</p>
			</footer>
		</div>
	</body>
</html>
